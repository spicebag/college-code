# Imports
import math

# Function to find area of a circle.
def area_circle():
    print("---< FIND THE AREA OF A CIRCLE >---")
    radius =int(input("Enter in the radius"))
    area=3*radius*radius
    print("The area of the circle is "+str(area))
    
# Function to find the circumfrence of a circle.
def circumfrence_circle():
    print("---< FIND THE CIRCUMFRENCE OF A CIRCLE >---")
    radius=int(input("Enter in the radius"))
    circ=2*3*radius
    print("The circumfrence= "+str(circ))

# Function to find the area of a rectangle.
def area_triangle():
    print("---< FIND THE AREA OF A RECTANGLE >---")
    base=int(input("Enter in the base"))
    height=int(input("Enter in the height"))
    area=0.5*base*height
    print("The area of the triangle is "+str(area))
    
# Function to find volume of a cuboid.
def volume_cuboid():
    print("---< FIND THE VOLIME OF A CUBOID >---")
    length=int(input("Enter in the length"))
    width=int(input("Enter in the width"))
    height=int(input("Enter in the height"))
    volume=length*width*height
    print("The volume of the cuboid is "+str (volume))
    
# Function to find volume of a sphere.
def volume_sphere():
    print("---< FIND THE VOLUME OF A SPHERE >---")
    radius=int(input("Enter in the radius"))
    volumesphere=4/3*3*radius*radius*radius
    print("The volume of the sphere is "+str(volumesphere))
    
# Function to find surface area of a sphere.

def surface_area_sphere():
    print("---< FIND THE SURFACE AREA OF A SPHERE >---")
    radius=int(input("Enter in the radius"))
    surfacearea=4*3*radius*radius
    print("The surface area of the sphere is "+str(surfacearea))
    
# Function to find volume of a cone.
def volume_cone():
    print("---< FIND THE VOLUME OF A CONE >---")
    radius=int(input("Enter in the radius"))
    height=int(input("Enter in the height"))
    volumecone=1/3*3*radius*radius*height
    print("The volume of the cone is "+str(volumecone))

# Function to find perimeter of a rectangle.
def perimeter_rectangle():
    print("---< FIND THE PERIMETER OF A RECTANGLE >---")
    length=int(input("Enter in the length"))
    width=int(input("Enter in the width"))
    perimeter=length*2+width*2
    print("The perimeter of the rectangle is "+str(perimeter))
 
# Main program, calling each functions
area_circle()
circumfrence_circle()
area_triangle()
circumfrence_circle()
volume_cuboid()
volume_sphere()
surface_area_sphere()
volume_cone()
perimeter_rectangle()

