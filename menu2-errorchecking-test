# menu2.py
# Displays a menu on the screen
# Error checks user inputs

def Errorcheck(message):
    while True:
          try:
            userinput=int(input(message))
          except:
              print("Invalid Entry try again.")
              continue
          else:
              break
          return (userinput)
      




# Main Program
option=0
while option!=5:
    print("*** Menu ***")
    print("1. Option #1")
    print("2. Option #2")
    print("3. Option #3")
    print("4. Option #4")
    print("5. Exit")
    option=Errorcheck("Please enter in your option: ")
    
    if option==1:
        print("You chose option 1")
        
    elif option==2:
        print("You chose option 2")
        
    elif option==3:
        print("You chose option 3")
        
    elif option==4:
        print("You chose option 4")
    
    elif option==5:
        print("You quit.")
    
    else:
        option=Errorcheck("Please enter in an option between 1 and 5")
    
